<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<StackPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="gui.controllers.LoginController"
           prefWidth="1280.0" prefHeight="720.0" minWidth="1280.0" minHeight="720.0">
    <children>
        <ImageView fitWidth="1280.0" fitHeight="720.0" preserveRatio="false" pickOnBounds="true">
            <image>
                <Image url="@../images/bg.png" />
            </image>
        </ImageView>
        
        <StackPane StackPane.alignment="CENTER">
            <ImageView fitWidth="840.0" fitHeight="500.0" preserveRatio="false">
                <image>
                   <Image url="@../images/login_bg.png" />
                </image>
            </ImageView>

            <HBox alignment="CENTER" spacing="20.0">
                
                <VBox alignment="CENTER">
                    <ImageView fx:id="medusaView" fitWidth="300" fitHeight="300" preserveRatio="true"/>
                </VBox>
                
                <VBox alignment="CENTER" spacing="10.0" prefWidth="280.0">
                    
                    <Text fx:id="welcomeText" text="Welcome to">
                        <font><Font name="Montserrat" size="18.0"/></font>
                    </Text>
                    <Text fx:id="titleText" text="AegisVault">
                        <font><Font name="TaraType" size="60.0"/></font>
                    </Text>
                    
                    <VBox spacing="12.0" alignment="CENTER">
                        <VBox.margin><Insets top="20.0"/></VBox.margin>
                        
                        <VBox spacing="12.0" alignment="CENTER" prefWidth="220.0">
                            
                            <VBox spacing="8.0" alignment="CENTER">
                                
                                <TextField fx:id="usernameField" promptText="Username" styleClass="login-text-field"
                                           prefWidth="260" maxWidth="260" minWidth="260" prefHeight="50.0"/>
                            </VBox>

                            <VBox spacing="8.0" alignment="CENTER">
                                
                                <PasswordField fx:id="passwordField" promptText="Password" styleClass="login-password-field"
                                               prefWidth="200" maxWidth="200" minWidth="200" prefHeight="35.0"/>
                            </VBox>
                            
                            <Button fx:id="loginButton" text="Login" onAction="#handleLogin" styleClass="login-button"
                                    prefWidth="80" prefHeight="30.0" maxWidth="80" minWidth="80">
                                <VBox.margin><Insets top="5.0"/></VBox.margin>
                            </Button>

                            <Text fx:id="blankField" text="Please fill in all fields!" visible="false" styleClass="error-text">
                                <font><Font name="Montserrat" size="12.0"/></font>
                            </Text>
                            
                        </VBox>
                        
                    </VBox>
                </VBox>
            </HBox>
        </StackPane>
    </children>
</StackPane>